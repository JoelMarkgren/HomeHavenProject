@inherits ComponentBase

@* --Author Joel Markgren-- *@

<div >
    <input type="checkbox" id="@Id" checked="@IsChecked" @onchange="CheckBoxChanged" />
    <label for="@Id">@Name</label>
</div>

@code {

    [Parameter]
    public EventCallback<int> OnCategorySelection { get; set; }
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public int Id { get; set; }
    [Parameter]
    public bool IsChecked { get; set; }

    protected async Task CheckBoxChanged(ChangeEventArgs e)
    {
        IsChecked = (bool)e.Value;
        await OnCategorySelection.InvokeAsync(Id);
    }
}

